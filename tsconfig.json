{
  "exclude": ["node_modules"],
  "include": ["./hardhat.config.ts", "./scripts", "./deploy"],
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@rocketh": ["./rocketh.ts"],
      "@generated/*": ["./generated/*"]
    }
  }
}
